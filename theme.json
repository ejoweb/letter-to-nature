{
	"version": 2,
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultGradients": false,
			"defaultPalette": false,
			"background": true,
			"text": true,
			"link": true,
			"palette": [
				{ "name": "Base", 	    "slug": "base", 	  "color": "#FFFFFF" },
				{ "name": "Base Alt", 	"slug": "base-x",     "color": "#F5F6F3" },
				{ "name": "Contrast", 	"slug": "contrast",   "color": "#333333" }
			],
			"custom": true,
			"gradients": [],
			"duotone": [
				{ "name": "Black and white", "slug": "black-and-white", "colors": [ "#000000", "#ffffff" ] }
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Base",
					"slug": "base",
					"fontFamily": "Seravek, 'Gill Sans Nova', Ubuntu, Calibri, 'DejaVu Sans', source-sans-pro, sans-serif"
				},
				{
					"name": "Handwriting",
					"slug": "handwriting",
					"fontFamily": "\"Caveat\",ui-serif, Georgia, serif",
					"fontFace": [
						{
							"fontFamily": "Caveat",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/caveat/caveat-v17-latin-regular.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "Small",    "slug": "small",    "size": "clamp(0.875rem, 4vw, 1rem)" },
				{ "name": "Medium",   "slug": "medium",   "size": "clamp(1rem, 3vw, 1.5rem)" },
				{ "name": "Large",    "slug": "large",    "size": "clamp(1.333rem, 4vw, 1.5rem)" },
				{ "name": "X-large",  "slug": "x-large",  "size": "clamp(2rem, 4vw, 2.25rem)" },
				{ "name": "XX-large",  "slug": "xx-large",  "size": "clamp(2.5rem, 5vw, 3.25rem)" }
			],
			"customFontSize": false,
            "lineHeight": true,
            "fontStyle": true,
			"fontWeight": true,
			"dropCap": false,
            "letterSpacing": false,
            "textDecoration": true,
            "textTransform": false
		},
		"border": {
			"color": true, 
			"radius": true, 
			"style": true, 
			"width": true
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "50rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{ "name": "1", "slug": "30", "size": "clamp(0.5rem, 4vw, 0.75rem)" },
				{ "name": "2", "slug": "40", "size": "clamp(1rem, 4vw, 1.5rem)" },
				{ "name": "3", "slug": "50", "size": "clamp(1.75rem, 4vw, 2.25rem)" },
				{ "name": "4", "slug": "60", "size": "clamp(2.75rem, 4vw, 3.75rem)" },
				{ "name": "5", "slug": "70", "size": "clamp(3.75rem, 4vw, 5rem)" }
			],
			"units": [ "%",	"px", "em", "rem", "vh", "vw" ]
		},
		"custom": {
			"typography": {
				"line-height": {
					"heading": 1,
					"handwriting": 0.8125,
					"base": 1.3333
				}
			},
			"borderRadius": {
				"small": "6px",
				"medium": "10px"
			},
			"spacing": {
				"containerPadding": {
					"horizontal": "var(--wp--preset--spacing--60)",
					"vertical": "var(--wp--preset--spacing--60)"
				}
			},
			"layout": {
				"fullSize": "75rem"
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": 	  "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--base)",
			"lineHeight": "var(--wp--custom--typography--line-height--base)",
			"fontSize":   "var(--wp--preset--font-size--medium)",
			"fontWeight":   "300"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--50)",
			"padding": {
				"top": "var(--wp--preset--spacing--50)",
				"right": "var(--wp--preset--spacing--60)",
				"bottom": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--60)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "currentColor"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"button": {
				"border": {
					"radius": "var(--wp--custom--border-radius--small)"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--base)",
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				},
				"color": {
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				},
				"spacing": {
					"padding": {
						"bottom": "0"
					}
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}				
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/column": {
				"spacing": {
					"padding": {
						"left": "0",
						"right": "0"
					}
				}
			},
			"core/post-featured-image": {
				"border": {
				}
			},
			"core/image": {
				"border": {
				}
			},
			"core/cover": {
				"border": {
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--base-x)"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
